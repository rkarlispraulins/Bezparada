{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "vite build",
        "outputDirectory": "dist/public"
      }
    },
    {
      "src": "api/contact.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/consultations.ts", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/contact",
      "dest": "/api/contact.ts"
    },
    {
      "src": "/api/consultations",
      "dest": "/api/consultations.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}